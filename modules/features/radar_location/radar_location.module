<?php

include_once('radar_location.features.inc');

function radar_location_views_pre_execute(&$view) {
  if ($view->name == 'region_topics') {
    $tid = $view->query->fields['tid'];
    $field = $tid['table'] . '.' . $tid['field'];
    $addition = " GROUP BY $field ORDER BY count($field) DESC";
    $view->build_info['query'] .= $addition;
  }
}
